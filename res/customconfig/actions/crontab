#!/sbin/busybox sh

# $1 - "crontab"
# $2 - value=
# Created By Dorimanx and Dairinin

if [ "a$2" != "a" ]; then
	crontab=$2;

	case "${crontab}" in
		on)
			if [ -e /system/xbin/busybox ] || [ -e /system/bin/busybox ]; then
				# stop if was running
				pkill -f "crond";

				# starting crontab service
				/res/crontab_service/service.sh > /dev/null;

			fi;
		;;
		off)
			pkill -f "crond";
		;;
		*)
			crontab=off;
		;;
	esac;
fi;

echo ${crontab};
